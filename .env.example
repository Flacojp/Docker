# Environment Variables for Docker DevSecOps Repository
# Copy this file to .env and modify the values as needed

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
COMPOSE_PROJECT_NAME=devsecops
TZ=America/New_York

# =============================================================================
# HOMER DASHBOARD CONFIGURATION
# =============================================================================
HOMER_IMAGE=b4bz/homer:latest
HOMER_PORT=8080
HOMER_USER_ID=1000
HOMER_GROUP_ID=1000

# =============================================================================
# PLEX MEDIA SERVER CONFIGURATION
# =============================================================================
PLEX_IMAGE=lscr.io/linuxserver/plex:latest
PLEX_PORT=32400
PLEX_PUID=1000
PLEX_PGID=1000

# =============================================================================
# TRIVY SECURITY SCANNER CONFIGURATION
# =============================================================================
TRIVY_IMAGE=aquasec/trivy:latest
TRIVY_SEVERITY=HIGH,CRITICAL

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEV_MODE=false
DEBUG_LEVEL=info
